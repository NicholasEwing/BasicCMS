<%- include('../partials/header') -%>

<% blogs.forEach(function(blog){ %>
	<section>
		<div class="container featured-blog">
			<div class="box">
				<img src="<%= blog.image %>">
			</div>
			<h1><%= blog.title %></h1>
			<p><%= blog.body.substring(0, 200) %>...</p>
			<p>Created: <%= blog.created.toLocaleDateString("en-US", {
				weekday: "long", year: "numeric", month: "short", day: "numeric"}) %></p>
			<a class="button" href="/blogs/<%=blog._id%>">Read More</a>
		</div>
	</section>
<% }) %>

<div class="container" id="cta">
	<a href="/blogs/new" class="button" id="new-blog-button">New Blog</a>
</div>


<%- include('../partials/footer') -%>