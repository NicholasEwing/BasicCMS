<%- include('partials/header') -%>

<div class="container" id="blog">
	<img src="<%= blog.image %>">
	<h1><%= blog.title %></h1>
	<p><%= blog.body %></p>

	<br>

	<button>
		<a href="/blogs/<%= blog._id %>/edit">Edit</a>
	</button>

	<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
		<button>Delete Blog</button>
	</form>

</div>

<%- include('partials/footer') -%>