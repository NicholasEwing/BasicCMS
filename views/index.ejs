<%- include('partials/header') -%>

<% blogs.forEach(function(blog){ %>
	<section id="featured">
		<div class="container featured-blogs">
			<img src="<%= blog.image %>">
			<h1><%= blog.title %></h1>
			<p><%= blog.body.substring(0, 200) %>...</p>
			<p>Created: <%= blog.created.toLocaleDateString("en-US", {
				weekday: "long", year: "numeric", month: "short", day: "numeric"}) %></p>
			<a class="button" href="/blogs/<%=blog._id%>">Read More</a>
		</div>
	</section>
<% }) %>

<div class="container" id="cta">
	<button><a href="/blogs/new">New Blog</a></button>
</div>


<%- include('partials/footer') -%>