<%- include('partials/header') -%>

<h1>This is the blogs page</h1>

<% blogs.forEach(function(blog){ %>
	<div class="wrapper">
		<h2><%= blog.title %></h2>
		<p><%= blog.body.substring(0, 50) %>...</p>
		<img src="<%= blog.image %>">
		<p>Created: <%= blog.created.toLocaleDateString("en-US", {
			weekday: "long", year: "numeric", month: "short", day: "numeric"}) %></p>
		<p><a href="/blogs/<%=blog._id%>">Read More</a></p>
	</div>
<% }) %>

<a href="/blogs/new"><button>New Blog</button></a>